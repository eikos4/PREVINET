{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: dev (cmd)",
      "type": "shell",
      "command": "cmd",
      "args": ["/c", "npm run dev"],
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": [
        {
          "owner": "vite",
          "pattern": [
            { "regexp": ".*" }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*",
            "endsPattern": "Local:.*http://"
          }
        }
      ]
    }
  ]
}